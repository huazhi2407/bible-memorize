# Firebase 服務帳號配置
# 方式 1: 使用文件路徑（本地開發推薦）
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# 方式 2: 使用環境變量（部署時使用，將整個 JSON 文件內容作為字符串）
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# 服務器配置
NODE_ENV=production
PORT=3001

# 管理員密碼（可選，默認為 admin123）
ADMIN_PASSWORD=admin123

# JWT 密鑰（生產環境請更改為隨機字符串）
JWT_SECRET=bible-memorize-secret-change-in-production
